---
import Badge from '@/components/Badge.astro';
import SectionContainer from '@/components/SectionContainer.astro';
import SocialPill from '@/components/SocialPill.astro';
import { Linkedin } from '@lucide/astro';

import Layout from '@/layouts/Layout.astro';
---

<Layout title="Porfolio de srgobi - Desarrollador y Programador Web con 5 años de experiencia" description="Contrata a srgobi para crear tu aplicación web o móvil. Desarrollador Web Full-Stack. Especializado en crear aplicaciones únicas.">
	<SectionContainer class="py-44 pb-32 flex flex-col gap-y-10">
		<article class="mb-10">
			<h1 class="mb-4 text-xl font-semibold">&lt;Badge /&gt;</h1>

			<Badge>Disponible para trabajar</Badge>
		</article>

		<article class="mb-10">
			<h1 class="mb-4 text-xl font-semibold">&lt SocialPill /&gt;</h1>

			<div class="flex">
				<SocialPill href="https://linkedin.com/in/midudev">
					<Linkedin class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>
			</div>
		</article>
	</SectionContainer>
</Layout>
